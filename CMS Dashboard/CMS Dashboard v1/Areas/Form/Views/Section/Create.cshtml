@model CMS_Dashboard_v1.Models.ModelForm.SectionViewModel
@{
    ViewBag.title = "Create";
}

<h3 class="fw-bold py-0 mb-4 "><span class="fw-light">Pages / Master Section / </span> @ViewBag.Title</h3>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            @*StartTittle*@
            <div class="card-body">
                @*Content*@
            </div>
            <hr class="my-0" />
            @*EndTittle*@

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <form method="post">

                            <div class="form-group">
                                <label class="form-label">Menu</label> 
                                <select class="form-select shadow-none" id="menulist" asp-for="menu_id">
                                </select>
                                <span asp-validation-for="menu_id" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Nama Section</label>
                                <input type="text" class="form-control" id="NameMenu" asp-for="section_name" placeholder="Silakan Input Disini">
                                <span asp-validation-for="section_name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Urutan</label>
                                <input type="number" class="form-control" id="NameMenu" asp-for="section_number" placeholder="Silakan Input Disini">
                                <span asp-validation-for="section_number" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Batas Content</label>
                                <input type="number" class="form-control" id="NameMenu" asp-for="section_approve" placeholder="Silakan Input Disini">
                                <span asp-validation-for="section_approve" class="text-danger"></span>
                            </div>

                            <br />
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Section" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                Back to List
                            </a>
                        </form>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/javascript.js"></script>
@section Scripts{
    @{
        //validation without call serverside
        <partial name="_ValidationScriptspartial" />
    }
}

