@model CMS_Dashboard_v1.Models.ModelForm.SectionViewModel
@{
    ViewBag.title = "Delete";
}

<h3 class="fw-bold py-0 mb-4 "><span class="fw-light">Pages / Master Section / </span> @ViewBag.Title</h3>

<div class="row">
    <div class="col-sm-12"> 

        <div class="card">
            @*StartTittle*@
            <div class="card-body">
                @*Content*@
            </div>
            <hr class="my-0" />
            @*EndTittle*@

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <form method="post" asp-action="Delete">

                            <input asp-for="section_id" hidden />
                            <input asp-for="menu_id" hidden />
                            <div class="form-group">
                                <label class="form-label">Menu</label>
                                <input type="text" class="form-control" id="NameMenu" asp-for="menu_name" readonly >
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Nama Section</label>
                                <input type="text" class="form-control" id="NameMenu" asp-for="section_name" readonly >
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Urutan</label>
                                <input type="number" class="form-control" id="NameMenu" asp-for="section_number" readonly >
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="exampleInputText1">Batas Content</label>
                                <input type="number" class="form-control" id="NameMenu" asp-for="section_approve" readonly >
                            </div>

                            <br />
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Section" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                Back to List
                            </a>
                        </form>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        //validation without call serverside
        <partial name="_ValidationScriptspartial" />
    }
}

