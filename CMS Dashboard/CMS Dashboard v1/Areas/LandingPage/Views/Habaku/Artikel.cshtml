<!--Section Artikel Terbaru-->
<section class="bg-greyscale-0">
    <div class="container mx-auto px-4 py-6 lg:px-200 lg:py-40 grid gap-4 lg:gap-6" x-data="loadArticles()">
        <!--Search Artikel-->
        <!-- <input
            x-ref="searchField"
            x-model="search"
            x-on:click="viewPage(0)"
            x-on:keydown.window.prevent.slash=" viewPage(0), $refs.searchField.focus()"
            placeholder="Cari artikel di sini..."
            type="search"
            class="block w-1/3 border border-greyscale-60 bg-greyscale-0 text-mb-small font-medium rounded-full px-4 py-3"
        /> -->

        <h1 class="font-bold text-mh-head4 lg:text-dh-head4 text-left">
            Artikel Terbaru
        </h1>

        <!--Show Items of Article-->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 lg:gap-8">
            <template x-for="item in filteredArticles" :key="item">
                <a :href="`${item.link_detail}`">
                    <div class="group grid gap-4">
                        <div class="group-hover:border-3 group-hover:rounded-xl group-hover:lg:rounded-2xl group-hover:border-blue-400 group-hover:drop-shadow-dropBlue">
                            <img :src="`${item.image}`" class="rounded-xl lg:rounded-2xl mx-auto w-full h-full" />
                        </div>
                        <div class="text-left">
                            <h1 class="group-hover:text-blue-400 font-bold text-mh-head6 lg:text-dh-head5"
                                x-text="item.title">
                            </h1>
                            <p class="text-mc-large text-dc-large text-greyscale-80">
                                <span x-text="item.title"></span> · <span x-text="item.published"></span>
                            </p>
                        </div>
                    </div>
                </a>
            </template>
        </div>

        <!--Section Pagination Number-->
        <div class="w-full mx-auto py-6 flex items-center justify-center" x-show="pageCount() > 1">

            <!--Previous Button-->
            <button class="-rotate-180 mx-80 text-blue-400 p-2 rounded-full border border-blue-300" x-on:click="prevPage" :disabled="pageNumber==0"
                    :class="{ 'disabled cursor-not-allowed text-greyscale-40 border-greyscale-40' : pageNumber==0 }">
                <span class="material-icons">keyboard_tab</span>
            </button>

            <!-- Display page numbers -->
            <template x-for="(page,index) in pages()" :key="index">
                <button class="mx-2 px-4 py-10 rounded-full text-blue-400 border border-blue-300"
                        :class="{ 'bg-blue-400 text-greyscale-0 font-semibold' : index === pageNumber }" type="button"
                        x-on:click="viewPage(index)">
                    <span x-text="index+1"></span>
                </button>
            </template>

            <!--Next Button-->
            <button class="mx-80 text-blue-400 p-2 rounded-full border border-blue-300" x-on:click="nextPage" :disabled="pageNumber >= pageCount() -1"
                    :class="{ 'disabled cursor-not-allowed text-greyscale-40 border-greyscale-40' : pageNumber >= pageCount() -1 }">
                <span class="material-icons">keyboard_tab</span>
            </button>
        </div>

        <!--Message to display when no results-->
        <div class="mx-auto flex items-center font-bold text-red-500"
             x-show="total===0">
            <svg class="h-8 w-8 text-red-500"
                 viewBox="0 0 24 24"
                 stroke-width="2"
                 stroke="currentColor"
                 fill="none"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <circle cx="12" cy="12" r="9" />
                <line x1="9" y1="10" x2="9.01" y2="10" />
                <line x1="15" y1="10" x2="15.01" y2="10" />
                <path d="M9.5 16a10 10 0 0 1 6 -1.5" />
            </svg>

            <span class="ml-4"> No results!!</span>
        </div>

    </div>
</section>